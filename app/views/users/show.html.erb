<div class="container">
  <small>ユーザーネーム：</small><div class="user-head"><%= @user.name %></div>
  <div>
    <%= link_to edit_user_path(@user.id), class: "setting-btn" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <div>
    <%= link_to '新規投稿', new_post_path, class: "new-post-btn" %>
  </div>
  <h3><i class="fas fa-list"></i> 投稿一覧</h3>
  <% @posts.each do |post| %>
    <div class="post-card">
        <div class="text-box">
          <%= link_to post.name, post_path(post), class: "post-link" %>
        </div>
        <%= image_tag attachment_url(post, :image, :fill, 300, 300, format: "jpg") %>
      </div>
  <% end %>
</div>