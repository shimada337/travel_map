<%= link_to 'トラベルマップ', root_path %>
  <ul>
    <% if user_signed_in? %>
      <li>
        <%= link_to user_path(current_user.id) do %>
          <i class="fa-solid fa-circle-user"></i> マイページ
        <% end %>
      </li>
      <li>
        <%= link_to posts_path do %>
          <i class="fa-solid fa-list"></i> 投稿一覧
        <% end %>
      </li>
      <li>
        <%= link_to users_path do %>
          <i class="fa-solid fa-users"></i> ユーザー一覧
        <% end %>
      <li>
        <%= link_to  destroy_user_session_path, method: :delete do %>
          <i class="fa-solid fa-right-from-bracket"></i> ログアウト
        <% end %>
      </li>
       <% else %>
      <li>
        <%= link_to new_user_registration_path do %>
          <i class="fa-solid fa-user-plus"></i> 新規登録
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa-solid fa-right-to-bracket"></i> ログイン
        <% end %>
      </li>
    <% end %>
  </ul>