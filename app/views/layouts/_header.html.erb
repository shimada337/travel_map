<div class="container">
  <%= link_to 'トラベルマップ', root_path, class: "logo" %>
    <ul>
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user.id), class: " header-link" do %>
            <i class="fa-solid fa-circle-user"></i> マイページ
          <% end %>
        </li>
        <li>
          <%= link_to posts_path, class: " header-link", 'data-turbolinks': false do %>
            <i class="fa-solid fa-list"></i> 投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to users_path, class: " header-link" do %>
            <i class="fa-solid fa-users"></i> ユーザー一覧
          <% end %>
        <li>
          <%= link_to  destroy_user_session_path, class: " header-link", method: :delete do %>
            <i class="fa-solid fa-right-from-bracket"></i> ログアウト
          <% end %>
        </li>
         <% else %>
        <li>
          <%= link_to new_user_registration_path, class: " header-link" do %>
            <i class="fa-solid fa-user-plus"></i> 新規登録
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class: " header-link" do %>
            <i class="fa-solid fa-right-to-bracket"></i> ログイン
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>