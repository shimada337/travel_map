<h2>新規投稿</h2>
<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :name, "名称" %>
    <%= f.text_field :name, placeholder: '名称を入力してください' %>
  </div>
  <div>
    <%= f.label :body, "本文", class: "linear-gradient" %>
    <%= f.text_area :body, class: "form-control", rows: 10, placeholder: '投稿本文を入力してください' %>
  </div>
  <div>
    <%= f.attachment_field :image %>
  </div>
  <div>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, placeholder: '住所を入力してください' %>
  </div>
  <div>
    <%= f.label :area, "地域" %>
    <%= f.select :area, Post.areas.keys, {}, placeholder: '地域を選択してください' %>
  </div>
  <div>
    <%= f.label :tag_name, 'タグ' %>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :tag_name %>
  </div>
  <div id="stars">
    <%= f.label :rate, '評価' %>
    <%= f.hidden_field :rate, id: :review_star %>
  </div>
  <div>
    <%= f.submit '投稿' %>
  </div>
<% end %>

<script>
  $('#stars').raty({
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'post[rate]', //登録するモデル名とカラム名を記述
    half: true,
  });
</script>